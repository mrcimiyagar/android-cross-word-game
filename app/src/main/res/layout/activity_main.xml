<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@drawable/cross_word_wallpaper"
    tools:context="kasper.android.cross_word.front.activities.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:id="@+id/activity_main_buttons_container"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="128dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="96dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:cardCornerRadius="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="6dp"
                    android:onClick="onMessagesBtnClicked">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/message_wallpaper"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="پیام ها"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:cardCornerRadius="28dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="6dp"
                    android:onClick="onOfflineGameBtnClicked">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/game_picture"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="بازی"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <android.support.v7.widget.CardView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:cardCornerRadius="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="6dp"
                    android:onClick="onStoreBtnClicked">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/store_wallpaper"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="فروشگاه"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:cardCornerRadius="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    app:cardElevation="6dp"
                    android:onClick="onWordsBtnClicked">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/word_wallpaper"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="واژه ها"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <android.support.v7.widget.CardView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:cardCornerRadius="28dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="6dp"
                    android:onClick="onAccountBtnClicked">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/settings_wallpaper"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="تنظیمات"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    app:cardCornerRadius="28dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    app:cardElevation="6dp"
                    android:onClick="onTourBtnClicked"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tournament_wallpaper"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="تورنمنت"
                        android:textSize="25sp"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginRight="-16dp"
        app:cardBackgroundColor="@android:color/transparent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/activity_main_top_bar_blur_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#fff"
                android:text="به بازی جدول خوش آمدید"
                android:textSize="25sp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"/>

        </eightbitlab.com.blurview.BlurView>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginRight="-16dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@android:color/transparent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/activity_main_bottom_bar_blur_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activity_main_money_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="$ 1800"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_main_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="کاربر بی نام"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </eightbitlab.com.blurview.BlurView>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-16dp"
        android:layout_marginRight="-16dp"
        android:layout_marginTop="-16dp"
        android:layout_marginBottom="-16dp"
        app:cardBackgroundColor="@android:color/transparent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
