<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    tools:activity=".front.activities.PresentActivity">

    <RelativeLayout
        android:id="@+id/activity_present_container_layout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        tools:targetApi="lollipop"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_present_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#fff"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"/>

        </ScrollView>

    </RelativeLayout>

    <TextView
        android:id="@+id/activity_present_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/activity_present_container_layout"
        android:background="@android:color/transparent"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center"
        android:elevation="6dp"
        tools:targetApi="lollipop"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ok"
        android:tint="#FFF"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:onClick="onOkBtnClicked"
        android:layout_below="@id/activity_present_container_layout"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>